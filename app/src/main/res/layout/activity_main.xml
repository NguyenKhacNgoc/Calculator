<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#04ABAB"
    android:orientation="vertical"
    tools:context=".MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@color/white"
        android:layout_margin="20dp"
        android:padding="5dp">
        <TextView
            android:id="@+id/tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="0"
            android:textSize="40sp"
            />

    </LinearLayout>
    <TableLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:stretchColumns="*"
        android:layout_margin="20dp">
        <TableRow
            android:background="#04A8A8">

            <Button
                android:id="@+id/btn7"
                android:layout_margin="2dp"
                android:backgroundTint="@color/white"
                android:text="7"
                android:textColor="@color/black"
                android:textSize="30sp" />

            <Button
                android:id="@+id/btn8"
                android:layout_margin="2dp"
                android:backgroundTint="@color/white"
                android:text="8"
                android:textColor="@color/black"
                android:textSize="30sp" />

            <Button
                android:id="@+id/btn9"
                android:layout_margin="2dp"
                android:backgroundTint="@color/white"
                android:text="9"
                android:textColor="@color/black"
                android:textSize="30sp" />

            <Button
                android:id="@+id/btnchia"
                android:layout_margin="2dp"
                android:backgroundTint="@color/white"
                android:text="/"
                android:textColor="@color/black"
                android:textSize="30sp" />
        </TableRow>
        <TableRow
            android:background="#04A8A8">

            <Button
                android:id="@+id/btn4"
                android:layout_margin="2dp"
                android:backgroundTint="@color/white"
                android:text="4"
                android:textColor="@color/black"
                android:textSize="30sp" />

            <Button
                android:id="@+id/btn5"
                android:layout_margin="2dp"
                android:backgroundTint="@color/white"
                android:text="5"
                android:textColor="@color/black"
                android:textSize="30sp" />

            <Button
                android:id="@+id/btn6"
                android:layout_margin="2dp"
                android:backgroundTint="@color/white"
                android:text="6"
                android:textColor="@color/black"
                android:textSize="30sp" />

            <Button
                android:id="@+id/btnnhan"
                android:layout_margin="2dp"
                android:backgroundTint="@color/white"
                android:text="*"
                android:textColor="@color/black"
                android:textSize="30sp" />
        </TableRow>
        <TableRow
            android:background="#04A8A8">

            <Button
                android:id="@+id/btn1"
                android:layout_margin="2dp"
                android:backgroundTint="@color/white"
                android:text="1"
                android:textColor="@color/black"
                android:textSize="30sp" />

            <Button
                android:id="@+id/btn2"
                android:layout_margin="2dp"
                android:backgroundTint="@color/white"
                android:text="2"
                android:textColor="@color/black"
                android:textSize="30sp" />

            <Button
                android:id="@+id/btn3"
                android:layout_margin="2dp"
                android:backgroundTint="@color/white"
                android:text="3"
                android:textColor="@color/black"
                android:textSize="30sp" />

            <Button
                android:id="@+id/btntru"
                android:layout_margin="2dp"
                android:backgroundTint="@color/white"
                android:text="-"
                android:textColor="@color/black"
                android:textSize="30sp" />
        </TableRow>
        <TableRow
            android:background="#04A8A8">

            <Button
                android:id="@+id/btnbang"
                android:layout_margin="2dp"
                android:backgroundTint="@color/white"
                android:text="="
                android:textColor="@color/black"
                android:textSize="30sp" />

            <Button
                android:id="@+id/btn0"
                android:layout_margin="2dp"
                android:backgroundTint="@color/white"
                android:text="0"
                android:textColor="@color/black"
                android:textSize="30sp" />

            <Button
                android:id="@+id/btnC"
                android:layout_margin="2dp"
                android:backgroundTint="@color/white"
                android:text="C"
                android:textColor="@color/black"
                android:textSize="30sp" />

            <Button
                android:id="@+id/btncong"
                android:layout_margin="2dp"
                android:backgroundTint="@color/white"
                android:text="+"
                android:textColor="@color/black"
                android:textSize="30sp" />
        </TableRow>


    </TableLayout>

</LinearLayout>

